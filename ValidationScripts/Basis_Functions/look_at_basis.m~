ccc
N=5;
[N1,lval,x,w,gamma] = leg_quad(N);
lp(1,:)=zeros(N+1,1);
lp(2,:)=ones(N+1,1);
for i = 3:N+1
    lp(i,:)=(2*(i-1)-1)*lval(i-1,:)+lp(i-2,:);
end
lp
for j = 1:N1
    for n = 1:N1
        phi(j,:)=-(1-x.^2)./(n*(n+1)*(x-x(j)))*lp(n;
    end
end
plot(x,phi)
hold on
plot(x,zeros(size(x)),'rs','LineWidth',4)
