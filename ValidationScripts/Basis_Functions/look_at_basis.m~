N=5;
[N1,lval,x,w,gamma] = leg_quad(N);

D=zeros(N1);
for ii = 1:N1
    i=ii-1
    for jj = 1:N1
        j=jj-1;
        if ii==jj && i==0
            dum=-N*(N+1)/4;
        elseif i==j && i>0 && i < N1
            dum=0.0;
        elseif i~=j
            dum=lval(N1,i)/(lval(N1,j)*(x(i)-x(j));
        elseif i==j && i==N
        end
    end
end
