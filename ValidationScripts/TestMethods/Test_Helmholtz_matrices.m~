ccc


N=20;
[phi, D, x, w]=GLL_Basis(N);
N1=N+1;
M=zeros(N1);
K=M;
for i = 1:N1
    M(i,i)=w(i);
    for j = 1:N1
        for k=1:N1
            K(i,j)=K(i,j)+D(i,k)*D(j,k);
        end
    end
end

u(:,1)=sin(pi*x);

global K M

T=0.01;
dt=0.001;
t=0:dt:T;
n=length(t);
for i = 1:n
    k1=RHS(u(:,i));
    k2=RHS(u(:,i)+dt/2*k1);
    k3=RHS(u(:,i)+dt/2*k2);
    k4=RHS(u(:,i)+dt/2*k1);

